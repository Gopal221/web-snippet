
<div class="background">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), class:"form-horizontal") do |f| %>

    <div id="legend" class="register">
      <legend class="reg-legend">Login</legend>
    </div>
    <div style="text-align:center;">
      <div class="form-group row">
        <label class="col-sm-2 col-form-label labels">Email</label>
        <div class="">
        <%= f.email_field :email, autofocus: true, class:"form-control", placeholder:"Email" %>
          <!-- <input type="text" class="form-control" placeholder="Email" id="staticEmail"> -->
        </div>
      </div>
      <div class="form-group row">
        <label class="col-sm-2 col-form-label labels">Password</label>
        <div class="">
          <%= f.password_field :password, autocomplete: "off", class:"form-control", placeholder:"Password" %>
          <!-- <input type="password" class="form-control" id="inputPassword" placeholder="Password"> -->
        </div>
      </div>
    </div>
    <div class="form-group">
    <!-- Button -->
    <%= f.submit "Log in", class:"btn btn-success reg-btn" %>
    
    <!-- <button class="btn btn-success reg-btn">Login</button> -->
  </div>
  <% end %>
  
</div>