<div class="background">
  <!-- <form class="form-horizontal"> -->
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "form-horizontal") do |f| %>
    <div id="legend" class="register">
      <legend class="reg-legend">Register</legend>
    </div>
    <div style="text-align:center;">
      <div class="form-group row">
        <label class="col-sm-2 col-form-label labels">Email</label>
        <div class="">
        <%= f.email_field :email, autofocus: true,  class:"form-control", placeholder:"Email" %>
          <!-- <input type="text" class="form-control" placeholder="Email" id="staticEmail"> -->
        </div>
      </div>
      <div class="form-group row">
        <label class="col-sm-2 col-form-label labels">Password</label>
        <div class="">
        <%= f.password_field :password, autocomplete: "off", class:"form-control",  placeholder:"Password" %>
          <!-- <input type="password" class="form-control" id="inputPassword"> -->
        </div>
      </div>
      <div class="form-group row">
        <!-- Password -->
        <label class="col-sm-2 col-form-label labels">Password (Confirm)</label>
        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder:"Please confirm password", class:"form-control input-width" %>
        <!-- <input type="password" id="password_confirm" name="password_confirm" placeholder="Please confirm password" class="form-control input-width"> -->
      </div>
      </div>
      <div class="form-group">
    <!-- Button -->
      <%= f.submit "Sign up", class:"btn btn-success reg-btn" %>
      <!-- <button class="btn btn-success reg-btn">Register</button> -->
    </div>
    <% end %>
  <!-- </form> -->
  
</div>





