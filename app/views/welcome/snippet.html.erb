<div>
	<button class="btn btn-default" ng-click="generateToken()">Generate token</button>
</div>

<ul class="nav nav-tabs" role="tablist">
  <li class="nav-item">
    <a class="nav-link active" data-toggle="tab" href="#mysnippet" role="tab">My Snippets</a>
  </li>
 <!--  <li class="nav-item">
    <a class="nav-link" data-toggle="tab" href="#sharedsnippet" role="tab">Shared Snippets</a>
  </li> -->
</ul>

<!-- Tab panes -->
<div class="tab-content">
  <div class="tab-pane active" id="mysnippet" role="tabpanel">
  	<div class="panel panel-default">
	    <div class="panel-body"><p class="text-center">Token : </p>
		    <div class="panel panel-default">
			    <div class="panel-body text-center">{{token}}</div>
			  </div>
			</div>
		</div>
		<br>
		<div class="container">
			<table class="table table-dark">
			  <thead>
			    <tr>
			      <th scope="col">Id</th>
			      <th scope="col">Name</th>
			      <th scope="col">Content</th>
			      <th scope="col"></th>
			    </tr>
			  </thead>
			  <tbody>
			    <tr ng-repeat="snippet in allSnippets">
			      <th scope="row">{{snippet.id}}</th>
			      <td>{{snippet.name}}</td>
			      <td style="cursor: pointer;"><span data-toggle="modal" data-target="#contentModal">{{snippet.content | limitTo: 70}}</span></td>
			      <!-- <td>
			      	<button class="btn btn-primary">Edit</button>
			      	<button class="btn btn-primary">Delete</button>
			      </td>
			    </tr> -->
			  </tbody>
			</table>
		</div>
	</div>

	<div class="modal fade" id="contentModal" role="dialog">
    <div class="modal-dialog">
    
    	<!-- Modal content-->
	    <div class="modal-content">
	      <div class="modal-header">
	        <h4 class="modal-title">Snippet Content</h4>
	      </div>
	      <div class="modal-body">
	        <p>Some text in the modal.</p>
	      </div>
	    </div>
   	</div>
  </div>
	
	<div class="tab-pane" id="sharedsnippet" role="tabpanel">
		<div class="table-snippet">
			<table class="table table-dark">
			  <thead>
			    <tr>
			      <th scope="col">Id</th>
			      <th scope="col">Name</th>
			      <th scope="col">Content</th>
			      <th scope="col"></th>
			    </tr>
			  </thead>
			  <tbody>
			    <tr>
			      <th scope="row">1</th>
			      <td>Mark</td>
			      <td>Otto</td>
			      
			    </tr>
			    <tr>
			      <th scope="row">2</th>
			      <td>Jacob</td>
			      <td>Thornton</td>
			     
			    </tr>
			    <tr>
			      <th scope="row">3</th>
			      <td>Larry</td>
			      <td>the Bird</td>
			     
			    </tr>
			  </tbody>
			</table>
		</div>
	</div>
</div>